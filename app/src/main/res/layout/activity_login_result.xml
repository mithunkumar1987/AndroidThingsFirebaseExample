<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.mithun.com.firebaseexampleauthapp.LoginResultActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/status_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No text"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/led_on_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ledOnClicked"
            android:text="ON" />

        <Button
            android:id="@+id/led_off_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ledOffClicked"
            android:text="OFF" />

        <Button
            android:id="@+id/led_blink_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ledBlinkClicked"
            android:text="BLINK" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
